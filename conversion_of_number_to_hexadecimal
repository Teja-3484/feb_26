class Solution:
    def toHex(self, num: int) -> str:
        if num==0:
            return "0"
        if num<0:
            num=num+(1<<32)
        hex_chars="0123456789abcdef"
        res=""
        while num>0:
            digit=num&15
            res=hex_chars[digit]+res
            num=num>>4
        return res
